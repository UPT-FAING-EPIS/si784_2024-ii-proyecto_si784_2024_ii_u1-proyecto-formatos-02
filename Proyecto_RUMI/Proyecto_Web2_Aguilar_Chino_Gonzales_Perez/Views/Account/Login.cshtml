@model Proyecto_Web2_Aguilar_Chino_Gonzales_Perez.Models.LoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: #f7f7f7;
            font-family: Roboto, sans-serif;
        }

        .login-container {
            max-width: 300px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                margin-bottom: 20px;
            }

            .login-container .form-group {
                margin-bottom: 15px;
            }

            .login-container .btn-primary {
                width: 100%;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="activitiesForm">
            <header class="header-center">
                <img src="~/Content/Images/Logo/Recurso 1mdpi.png">
                <h1>Rumi</h1>
            </header>
            <div class="row">
                <div class="col">

                </div>
                <div class="col">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @*@Html.LabelFor(m => m.UserName, new { @class = "labelEstilo" })*@
                            <div>
                                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Usuario", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="form-group">
                            @*@Html.LabelFor(m => m.Password, new { @class = "control-label" })*@
                            <div>
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <br /><br />
                        <div class="form-group">
                            <footer>
                                <button type="submit" class="btn btn-primary">Ingresar</button>
                            </footer>
                        </div>
                    }
                </div>
                <div class="col">

                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>